{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Hito list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Entregahito</th>
                <th>Nombreentrega</th>
                <th>Fechainicio</th>
                <th>Fechaentrega</th>
                <th>Calificacionhito</th>
                <th>Estadohito</th>
                <th>Correciones</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('hito_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.entregaHito }}</td>
                <td>{{ entity.nombreEntrega }}</td>
                <td>{% if entity.fechaInicio %}{{ entity.fechaInicio|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaEntrega %}{{ entity.fechaEntrega|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.calificacionHito }}</td>
                <td>{{ entity.estadoHito }}</td>
                <td>{{ entity.correciones }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('hito_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('hito_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('hito_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
